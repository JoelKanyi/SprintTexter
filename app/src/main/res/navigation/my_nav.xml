<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/texterFragment">

    <fragment
        android:id="@+id/texterFragment"
        android:name="com.kanyideveloper.sprinttexter.ui.fragments.texter.TexterFragment"
        android:label="fragment_texter"
        tools:layout="@layout/fragment_texter">
        <action
            android:id="@+id/action_texterFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
        <action
            android:id="@+id/action_texterFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
    </fragment>
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.kanyideveloper.sprinttexter.ui.fragments.history.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.kanyideveloper.sprinttexter.ui.fragments.about.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
</navigation>